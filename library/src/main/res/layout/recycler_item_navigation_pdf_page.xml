<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/navigation_page_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.itextpdf.android.library.views.PdfThumbnailView
        android:id="@+id/pageThumbnail"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/border_background"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/pageThumbnail"
        app:layout_constraintStart_toStartOf="@id/pageThumbnail"
        app:layout_constraintEnd_toEndOf="@id/pageThumbnail"/>

</androidx.constraintlayout.widget.ConstraintLayout>